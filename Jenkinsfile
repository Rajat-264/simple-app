pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Rajat-264/simple-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
